<schema version="0.2">
	<!--
	 *
	 * TABLE funder_award
	 *
	 -->
	<table name="citations_extended">
		<field name="citations_extended_id" type="I8">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="publication_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="parsed_citations" type="XL">
			<NOTNULL/>
		</field>
		<descr>List of parsed citations for each publication</descr>
	</table>

</schema>
